{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "allowJs": true,
    "strictNullChecks": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test/*"]
}