{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es6"
    ],
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test/*"]
}